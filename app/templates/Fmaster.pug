    script.
        $(function(){
           if(window.location.href.includes('unauthorized')){
               $.toast({
                    heading: 'Unauthorized!',
                    text:'Please Login to Access this Portal',
                    icon:'warning',
                    position: 'top-center',
                    loader: false,
                    stack : false,
                    hideAfter : 6000
                })
           }
           else if(window.location.href.includes('logout')){
               $.toast({
                    heading: 'Log off',
                    text:'You Have Log-out to Scholarship Management System',
                    icon:'success',
                    position: 'top-center',
                    loader: false,
                    stack : false,
                    hideAfter : 6000
                })
           }
        });
        function showRegisterForm(){
            $('.loginBox').fadeOut('fast',function(){
                $('.recoveryBox').fadeOut('fast');
                $('.registerBox').fadeIn('fast');
                $('.login').fadeOut('fast',function(){
                    $('.register-footer').fadeIn('fast');
                });
                $('#title').html('Register');
                $('#text').html('');
            }); 
            $('.error').removeClass('alert alert-danger').html('');
                
        }
        function showLoginForm(){
            $('#loginModal .registerBox').fadeOut('fast',function(){
                $('#loginModal .recoveryBox').fadeOut('fast')
                $('.loginBox').fadeIn('fast');
                $('.register-footer').fadeOut('fast',function(){
                    $('.login').fadeIn('fast');    
                });
                
                $('#title').html('Scholarship');
                $('#text').html('Log in to your account');
            });       
            $('.error').removeClass('alert alert-danger').html('');
            
            
        }
        function showRecoveryForm(){
            $('#loginModal .loginBox').fadeOut('fast',function(){
                $('#loginModal .registerBox').fadeOut('fast')
                $('.recoveryBox').fadeIn('fast');
                $('.register-footer').fadeOut('fast',function(){
                    $('.login').fadeIn('fast');    
                });
                
                $('#title').html('Account Recovery');
                $('#text').html('');
            });       
            $('.error').removeClass('alert alert-danger').html('');

        }
        $('form#recovery').submit(function(e){
            e.preventDefault();
            $.ajax({
                url: '/recovery',
                method: 'post',
                data: $(this).serialize(),
                success: function(response){
                    if(response == 'success'){
                        $.toast({
                            heading: 'Sent!',
                            text:'Recovery Email Sent',
                            icon:'success',
                            position: 'bottom-right',
                            loader: false,
                            stack : 3
                        })
                        $("#loginModal .close").click()
                    }
                    else if(response == 'error'){
                        $.toast({
                            heading: 'ERROR!',
                            text:'No Such Record',
                            icon:'error',
                            position: 'top-right',
                            loader: false,
                            stack : 3
                        })
                    }
                }
            })
        })
        $('form#login').submit(function(e){
            e.preventDefault();
            $.ajax({
                url: '/login',
                method: 'post',
                data: $(this).serialize(),
                success: function(response){
                    if(response == 'password'){
                        $.toast({
                            heading: 'ERROR!',
                            text:'Incorrect Password',
                            icon:'error',
                            position: 'top-right',
                            loader: false,
                            stack : 3
                        })
                    }
                    else if(response == 'exist'){
                        $.toast({
                            heading: 'ERROR!',
                            text:'No Such Account',
                            icon:'error',
                            position: 'top-right',
                            loader: false,
                            stack : 3
                        })
                    }
                    switch(response){
                        case 'home': window.location='/home';break;
                        case 'coordinator': window.location='/coordinator';break;
                        case 'user': window.location='/user';break;
                    }
                }
            })
        })

