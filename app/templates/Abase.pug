    // Label Style
    style.
        label{
        font-weight: normal;
        }
        button:hover{
        cursor: pointer;
        }
        .btn, .navbar .navbar-nav > li > a.btn {
        border-radius: 3px;
        }    
        .reveal-if-active {
          opacity: 0;
          max-height: 0;
          overflow: hidden;
          font-size: inherit;
          transform: scale(0.8);
          transition: 0.5s;
          margin-left: -2.6%;
        
        }
        #tod.form-control{
            width: 102.5%;
        }
        .reveal-if-active label {
          display: block;
          margin: inherit;
        }
        .reveal-if-active input[type=text] {
          width: 100%;
          
        }
        input[type="radio"]:checked ~ .reveal-if-active, input[type="checkbox"]:checked ~ .reveal-if-active {
          opacity: 1;
          max-height: 100px;
          padding: 10px 20px;
          transform: scale(1);
          overflow: visible;
        * {
          box-sizing: border-box;
        }
