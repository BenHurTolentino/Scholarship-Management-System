            .sidebar-wrapper::-webkit-scrollbar{
                position: absolute;
                background-color: transparent;
                border-radius: 6px;
                transition: background-color .2s linear,height .2s linear,width .2s ease-in-out,border-radius .2s ease-in-out;
                right: 2px;
                width: 6px;
            }
            a.nav-link.btn-move-right:focus, a.nav-link.btn-move-right:hover,
            a#navbarDropdownMenuLink:focus, a#navbarDropdownMenuLink:hover {
                color: #505677!important;
            }
            .dropdown-menu .dropdown-item:focus, .dropdown-menu .dropdown-item:hover{
                background-color: #505677!important;
            }
            .sidebar-wrapper::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 0 rgba(0,0,0,1);
            }
            .sidebar-wrapper::-webkit-scrollbar-thumb {
            background-color: #bbb;
            outline: 10px solid transparent;
            }
            .sidebar .sidebar-wrapper{
                overflow-x: hidden;
            }
            button#minimizeSidebar.btn.btn-icon.btn-round{
                background: #62698e!important;
            }
            button#minimizeSidebar.btn.btn-icon.btn-round:hover{
                background: #434760!important;
            }
            button#minimizeSidebar.btn.btn-icon.btn-round:focus{
                background: #434760!important;
            }
            .pagination .page-item.active>.page-link, .pagination .page-item.active>.page-link:focus{
                background-color: #62698e;
                color: #fff;
            }
            .pagination .page-item .page-link:hover{
                color: #fff;
            }
            .page-link:hover{
                background-color: #434760!important;
                color: #fff;

            }
            button.btn.btn-fab.btn-icon.btn-round{
                background-color: #62698e;
            }
            .btn-fab.btn-icon.btn-round:hover,.btn-fab.btn-icon.btn-round:focus,.btn-fab.btn-icon.btn-round:active{
                background-color: #434760!important;
            }
            .right-side>button.btn.btn-link:hover{
                background-color: #505677!important;
            }
            .right-side>button.btn.btn-link:focus{
                background-color: #434760!important;
            }
            .toggle-handle.btn.btn-default{
                background-color: #fff!important;
            }
            .btn.btn-success.toggle-on{
                color: #fff;
            }
            
            .btn.btn-success.toggle-on:hover{
                text-decoration: none;
            }
            .btn.btn-danger.toggle-off{
                background-color: grey!important;
            }
