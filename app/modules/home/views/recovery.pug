extends ../../../templates/Abase

block body
    link(href="../css/paper-kit.min.css", rel="stylesheet")
    link(href="../css/recover.css", rel="stylesheet")
    script(src="../js/paper-kit.min.js")
    
    .background-img(style="background-image: url('../img/bg2.png')")
        .filter
        .container
            .row
                .col-sm-4.col-sm-offset-4
                    h1.title
                        img(src="../img/logo1.png" style="margin-top: 5px; height: 200px; width: 200px;")
                    .card-content
                        form(method='POST', action=`/recovery/${data.token}`)
                            .form-group
                                h6.form-text.text-muted(for="password") New Password
                                |     
                                input#password.form-control(type="password", placeholder="Password", name="Pword")
                            .form-group
                                h6.form-text.text-muted(for="password") Confirm New Password
                                |     
                                input#Cpassword.form-control(type="password", placeholder="Confirm Password", name="CPword")
                            button#recover.btn.btn-block(type="submit") Submit
    script.
       
            
