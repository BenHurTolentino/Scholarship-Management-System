extends ../../../templates/masterpanel

block content
    .content
        .container-fluid
            .row
                .col-md-12
                    .card.strpied-tabled-with-hover
                        .card-header
                            h4.card-title Sent Mail
                            p.card-category All Messages
                            hr
                            button.btn.btn-info(type='submit', data-toggle='modal', data-target='#newMessage')
                                i.ti-pencil-alt
                                |  Compose
                            #newMessage.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
                                .modal-dialog(role='document')
                                    .modal-content
                                        .modal-header
                                            h6#exampleModalLabel.modal-title Create a new message
                                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                                span.nc-icon.nc-simple-remove(aria-hidden='true')
                                        .modal-body
                                            form
                                                .row
                                                    .col-md-12
                                                        .form-group
                                                            h6 Send to:
                                                            input.form-control(type='text', placeholder='@mandaluyong', value='')
                                                .row
                                                    .col-md-12
                                                        .form-group
                                                            h6 Subject:
                                                            input.form-control(type='text', placeholder='Here can be your description', value='')
                                                .row
                                                    .col-md-12
                                                        .form-group
                                                            h6 Message
                                                            textarea.form-control(rows='5', placeholder='Write your thoughts.', value='')
                                        .modal-footer
                                            button.btn.btn-secondary.btn-fill
                                                i.nc-icon.nc-attach-87
                                                |  Attachment
                                            input(type='file', style='display: none;')
                                            h6(style='opacity: .5;')  Max: 10 MB 
                                            button.btn.btn-info(type='submit') Send Message
                        .card-body.table-full-width.table-responsive
                            table.table.table-hover.table-striped
                                thead
                                    tr
                                        th #
                                        th Title
                                        th Description
                                        th Date - Time
                                        th.text-center Action
                                tbody
                                    tr
                                        td 1
                                        td Application
                                        td Requirements
                                        td February 10, 2018 - 10:43 PM
                                        td.td-actions.text-center
                                            a.btn.btn-info.btn-link.btn-xs(href='#', rel='tooltip', title='', data-original-title='Reply')
                                                i.fa.fa-mail-reply
                                            a.btn.btn-success.btn-link.btn-xs(href='#', rel='tooltip', title='', data-original-title='View Message')
                                                i.fa.fa-eye
                                            a.btn.btn-danger.btn-link.btn-xs(href='#', rel='tooltip', title='', data-original-title='Remove')
                                                i.fa.fa-remove
    #chartPreferences.ct-chart.ct-perfect-fourth(style='display: none;')
    #chartHours.ct-chart(style='display: none;')
    #chartActivity.ct-chart(style='display: none;')
    footer.footer
