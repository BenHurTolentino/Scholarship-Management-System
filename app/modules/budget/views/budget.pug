extends ../../../templates/masterpanel

block content
    .content
        .row
          .col-md-12
            .card
              .card-header
                h4.card-title  List of Budget &nbsp;
                  button.btn.btn-fab.btn-icon.btn-round(data-toggle="modal" data-target="#addModal")
                    i.fa.fa-plus 
              .card-body
                .table-responsive
                  table#example.table.table-striped
                    #addModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
                        .modal-dialog(role='document')
                            .modal-content
                                .modal-header
                                    h5#exampleModalLabel.modal-title Add a Budget
                                    button.close(type="button", data-dismiss="modal", aria-label="Close")
                                        span(aria-hidden="true").material-icons close
                                form(method='POST', action='/budget')
                                    .card-body
                                        .form-group.bmd-form-group
                                          label.bmd-label-floating Input Budget *               
                                          input.form-control(type="number", required="true", aria-required="true", name="budget")
                                        .form-group.bmd-form-group
                                          label.bmd-label-floating Scholarship Type *
                                          select.form-control(name="stype")
                                            each program in programs
                                              option(value=program.intSTId) #{program.strSTDesc}
                                    .card-footer
                                          button.btn.btn-danger.btn-link(type="hidden", data-dismiss="modal", style="visibility: hidden;") Cancel
                                          button.btn(type="submit", style="background-color: #505677;") Submit
                    thead
                      tr
                        th Allotted Budget            
                        th Scholarship
                        th Slots
                        th Excess
                        th.text-right Year                   
                        th.text-right Actions
                    |               
                    tbody
                      each budget in budgets
                          tr
                            td #{budget.dblAmount}
                            td #{budget.strSTDesc}
                            td #{budget.intSlots}
                            td #{budget.dblExcessAmt}
                            td.text-right #{budget.datBudgetDate}
                            td.text-right
                              button.btn.btn-success(class="edit", type="button", data-id="", title="Edit", data-toggle='modal', data-target='#editModal', style="padding: 25px 5px 2px 5px;")
                                i.material-icons(style="margin-top: -20px;") edit
                                .ripple-container
                              #editModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="exampleModalLabel", aria-hidden="true")
                                .modal-dialog(role="document")
                                  .modal-content
                                    .modal-header
                                      h5#exampleModalLabel.modal-title Edit Budget Details
                                      button.close(type="button", data-dismiss="modal", aria-label="Close")
                                        span(aria-hidden="true").material-icons close
                                    form(method='#', action='#')
                                      .card-body
                                          .form-group.bmd-form-group
                                            p.bmd-label-floating Input Budget *               
                                            input.form-control(type="number", required="true", aria-required="true", name="")
                                          .form-group.bmd-form-group
                                            label.bmd-label-floating Scholarship Type *
                                            select.form-control(name="stype")
                                              each program in programs
                                                option(value=program.intSTId) #{program.strSTDesc}
                                      .card-footer
                                          button.btn.btn-danger.btn-link(type="hidden", data-dismiss="modal", style="visibility: hidden;") Cancel
                                          button.btn(type="submit", style="background-color: #505677;") Submit
                              a.button.btn.btn-danger(href="", title="Delete", style="padding: 25px 5px 2px 6px;")
                                i.material-icons(style="margin-top: -20px; margin-left: -1px;") close
                                |                     
                                .ripple-container

    footer.footer
      .container-fluid
        nav.float-left
          ul
            li
              a(href="#")
                | Application
            |               
            li
              a(href="#")
                | Budget
