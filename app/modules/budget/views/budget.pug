          |  Scholarship Managememt Team
          |  for a better future.
    script.
      $(document).ready(function() {
          $('#example').DataTable();
      } );
      $(document).on('click',".edit",function(){
            var myBId = $(this).data('id');
            $('.modal-body #BId').val(myBId);
        });





